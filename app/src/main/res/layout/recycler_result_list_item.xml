<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/recyclerResultListItemResultWeightingPercentageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recyclerResultListItemResultWeightingPercentageLabel"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerResultListItemResultWeightingPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/recyclerResultListItemResultWeightingPercentageDefaultValue"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintStart_toEndOf="@+id/recyclerResultListItemResultWeightingPercentageLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerResultListItemResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/recyclerResultListItemResultNameDefaultValue"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerResultListItemResultWeightingPercentageLabel" />

    <TextView
        android:id="@+id/recyclerResultListItemResultPercentageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recyclerResultListItemResultPercentageLabel"
        android:textColor="@color/textColorSecondary"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerResultListItemResultPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/recyclerResultListItemResultPercentageDefaultValue"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerResultListItemResultPercentageLabel" />

</android.support.constraint.ConstraintLayout>